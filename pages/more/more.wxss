
.container{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  margin-bottom: 200rpx;
  z-index: 2;
}

scroll-view{
  text-align: center;
  width: 750rpx;
  height: 100vh;
}

.img_wrap{
  width: 700rpx;
  height: 350rpx;
  display: flex;
  overflow: hidden;
  background: #fff;
  margin-bottom: 20rpx;
  margin: 20rpx auto;
  border-radius: 10rpx;
}

.img_wrap image{
  width: 100%;
  height: 100%;
}
.pretty{
  background: #e4e4e4;
}
.triangle:before{
			
	border-top:8px solid #fff;
	top:100%;
	left:46%;
}
.triangle:after{
	border-top:8px solid #e4e4e4;
	top:99%;
	left:46%;
}
